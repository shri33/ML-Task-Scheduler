# =============================================================================
# Development Environment Terraform Variables
# =============================================================================

aws_region   = "us-east-1"
environment  = "dev"
project_name = "ml-scheduler"

# Networking - Cost optimized
vpc_cidr           = "10.1.0.0/16"
enable_nat_gateway = true
single_nat_gateway = true  # Single NAT to save costs

# EKS Cluster
cluster_version                = "1.29"
cluster_endpoint_public_access = true
cluster_endpoint_private_access = true

# Node Groups - Minimal for dev
node_instance_types = ["t3.medium", "t3a.medium"]
node_desired_size   = 2
node_min_size       = 1
node_max_size       = 5

# Node Groups - ML Workers (minimal)
ml_node_instance_types = ["t3.large"]
ml_node_desired_size   = 1
ml_node_min_size       = 0
ml_node_max_size       = 3

# Database - Smaller for dev
db_instance_class        = "db.t3.small"
db_allocated_storage     = 20
db_max_allocated_storage = 50
db_multi_az              = false
db_backup_retention_period = 1

# Redis - Minimal
redis_node_type           = "cache.t3.micro"
redis_num_cache_clusters  = 1
redis_automatic_failover  = false

# Monitoring
enable_cloudwatch_logs = true
log_retention_days     = 7
