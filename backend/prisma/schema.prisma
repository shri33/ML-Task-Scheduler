// Prisma Schema for Task Scheduler Database

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskType {
  CPU
  IO
  MIXED
}

enum TaskSize {
  SMALL
  MEDIUM
  LARGE
}

enum TaskStatus {
  PENDING
  SCHEDULED
  RUNNING
  COMPLETED
  FAILED
}

enum ResourceStatus {
  AVAILABLE
  BUSY
  OFFLINE
}

model Task {
  id            String     @id @default(uuid())
  name          String
  type          TaskType
  size          TaskSize
  priority      Int        @db.SmallInt
  status        TaskStatus @default(PENDING)
  dueDate       DateTime?
  predictedTime Float?
  actualTime    Float?
  resourceId    String?
  resource      Resource?  @relation(fields: [resourceId], references: [id])
  createdAt     DateTime   @default(now())
  scheduledAt   DateTime?
  completedAt   DateTime?
  deletedAt     DateTime?  // Soft delete

  scheduleHistory ScheduleHistory[]
  predictions     Prediction[]

  @@index([status])
  @@index([resourceId])
  @@index([dueDate])
  @@index([status, priority])  // Composite: scheduler queries
  @@index([resourceId, status]) // Composite: resource task lookup
  @@index([deletedAt])
}

model Resource {
  id          String         @id @default(uuid())
  name        String         @unique
  capacity    Int
  currentLoad Float          @default(0)
  status      ResourceStatus @default(AVAILABLE)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt
  deletedAt   DateTime?      // Soft delete

  tasks           Task[]
  scheduleHistory ScheduleHistory[]

  @@index([status])
  @@index([status, currentLoad]) // Composite: available resource queries
  @@index([deletedAt])
}

model ScheduleHistory {
  id            String   @id @default(uuid())
  taskId        String
  task          Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  resourceId    String
  resource      Resource @relation(fields: [resourceId], references: [id])
  algorithm     String
  mlEnabled     Boolean  @default(true)
  predictedTime Float?
  actualTime    Float?
  score         Float?
  explanation   String?
  createdAt     DateTime @default(now())

  @@index([taskId])
  @@index([resourceId])
}

model Prediction {
  id            String   @id @default(uuid())
  taskId        String
  task          Task     @relation(fields: [taskId], references: [id], onDelete: Cascade)
  predictedTime Float
  confidence    Float
  features      Json
  modelVersion  String
  createdAt     DateTime @default(now())

  @@index([taskId])
}

model SystemMetrics {
  id          String   @id @default(uuid())
  metricName  String
  metricValue Float
  timestamp   DateTime @default(now())

  @@index([metricName])
  @@index([timestamp])
}

// User Authentication
enum UserRole {
  ADMIN
  USER
  VIEWER
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  name          String
  role          UserRole  @default(USER)
  isActive      Boolean   @default(true)
  lastLogin     DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  deletedAt     DateTime? // Soft delete

  refreshTokens RefreshToken[]
  notifications NotificationPreference?

  @@index([email])
  @@index([role, isActive]) // Composite: user management queries
  @@index([deletedAt])
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
}

model NotificationPreference {
  id                  String  @id @default(uuid())
  userId              String  @unique
  user                User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  emailOnTaskComplete Boolean @default(true)
  emailOnTaskFailed   Boolean @default(true)
  emailDailySummary   Boolean @default(false)
  emailAddress        String?
}

// ML Model Versioning
enum ModelStatus {
  TRAINING
  ACTIVE
  ARCHIVED
  FAILED
}

model MlModel {
  id                String      @id @default(uuid())
  version           String      @unique
  modelType         String      // random_forest, xgboost, gradient_boosting
  status            ModelStatus @default(TRAINING)
  r2Score           Float?
  maeScore          Float?
  rmseScore         Float?
  featureImportance Json?
  trainingDataCount Int?
  filePath          String?
  createdAt         DateTime    @default(now())
  activatedAt       DateTime?

  @@index([status])
  @@index([modelType])
}

model TrainingJob {
  id            String      @id @default(uuid())
  status        ModelStatus @default(TRAINING)
  triggerType   String      // manual, auto, scheduled
  triggerReason String?
  dataPointsNew Int?
  startedAt     DateTime    @default(now())
  completedAt   DateTime?
  error         String?
  modelVersion  String?

  @@index([status])
}

model AutoRetrainConfig {
  id                      String   @id @default(uuid())
  enabled                 Boolean  @default(false)
  minDataPointsThreshold  Int      @default(100)
  maxDataPointsThreshold  Int      @default(1000)
  r2ScoreThreshold        Float    @default(0.8)
  lastCheckedAt           DateTime?
  dataPointsSinceRetrain  Int      @default(0)
  createdAt               DateTime @default(now())
  updatedAt               DateTime @updatedAt
}

// IoT Device Management
enum DeviceType {
  CAMERA
  ROBOT_ARM
  IOT_SENSOR
  EDGE_SERVER
  ACTUATOR
}

enum DeviceStatus {
  ONLINE
  OFFLINE
  MAINTENANCE
  ERROR
}

model Device {
  id            String       @id @default(uuid())
  name          String
  type          DeviceType
  status        DeviceStatus @default(OFFLINE)
  ipAddress     String?
  port          Int?
  location      String?
  description   String?
  capabilities  Json?        // Device-specific capabilities
  configuration Json?        // Device configuration settings
  lastHeartbeat DateTime?
  createdAt     DateTime     @default(now())
  updatedAt     DateTime     @updatedAt

  deviceLogs    DeviceLog[]
  deviceMetrics DeviceMetric[]

  @@index([type])
  @@index([status])
  @@unique([ipAddress, port])
}

model DeviceLog {
  id        String   @id @default(uuid())
  deviceId  String
  device    Device   @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  level     String   // info, warning, error
  message   String
  metadata  Json?
  timestamp DateTime @default(now())

  @@index([deviceId])
  @@index([timestamp])
}

model DeviceMetric {
  id        String   @id @default(uuid())
  deviceId  String
  device    Device   @relation(fields: [deviceId], references: [id], onDelete: Cascade)
  metricName String   // cpu_usage, memory_usage, temperature, etc.
  value     Float
  unit      String?
  timestamp DateTime @default(now())

  @@index([deviceId])
  @@index([metricName])
  @@index([timestamp])
}

// ---------------------------------------------------------------------------
// Fog Computing Models
// ---------------------------------------------------------------------------

enum FogNodeStatus {
  ACTIVE
  INACTIVE
  MAINTENANCE
}

model FogNode {
  id                String        @id @default(uuid())
  name              String        @unique
  computingResource Float         // Hz
  storageCapacity   Float         // GB
  networkBandwidth  Float         // Mbps
  currentLoad       Float         @default(0) // 0-1
  status            FogNodeStatus @default(ACTIVE)
  createdAt         DateTime      @default(now())
  updatedAt         DateTime      @updatedAt

  taskAssignments FogTaskAssignment[]

  @@index([status])
}

model FogTaskAssignment {
  id               String   @id @default(uuid())
  fogNodeId        String
  fogNode          FogNode  @relation(fields: [fogNodeId], references: [id], onDelete: Cascade)
  taskName         String
  algorithm        String   // HH, IPSO, IACO, FCFS, RR, MIN_MIN
  completionTime   Float?
  energyConsumed   Float?
  reliable         Boolean  @default(true)
  assignedAt       DateTime @default(now())

  @@index([fogNodeId])
  @@index([algorithm])
}

