// Prisma Schema for Task Scheduler Database

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskType {
  CPU
  IO
  MIXED
}

enum TaskSize {
  SMALL
  MEDIUM
  LARGE
}

enum TaskStatus {
  PENDING
  SCHEDULED
  RUNNING
  COMPLETED
  FAILED
}

enum ResourceStatus {
  AVAILABLE
  BUSY
  OFFLINE
}

model Task {
  id            String     @id @default(uuid())
  name          String
  type          TaskType
  size          TaskSize
  priority      Int        @db.SmallInt
  status        TaskStatus @default(PENDING)
  dueDate       DateTime?
  predictedTime Float?
  actualTime    Float?
  resourceId    String?
  resource      Resource?  @relation(fields: [resourceId], references: [id])
  createdAt     DateTime   @default(now())
  scheduledAt   DateTime?
  completedAt   DateTime?

  scheduleHistory ScheduleHistory[]
  predictions     Prediction[]

  @@index([status])
  @@index([resourceId])
  @@index([dueDate])
}

model Resource {
  id          String         @id @default(uuid())
  name        String         @unique
  capacity    Int
  currentLoad Float          @default(0)
  status      ResourceStatus @default(AVAILABLE)
  createdAt   DateTime       @default(now())
  updatedAt   DateTime       @updatedAt

  tasks           Task[]
  scheduleHistory ScheduleHistory[]

  @@index([status])
}

model ScheduleHistory {
  id            String   @id @default(uuid())
  taskId        String
  task          Task     @relation(fields: [taskId], references: [id])
  resourceId    String
  resource      Resource @relation(fields: [resourceId], references: [id])
  algorithm     String
  mlEnabled     Boolean  @default(true)
  predictedTime Float?
  actualTime    Float?
  score         Float?
  explanation   String?
  createdAt     DateTime @default(now())

  @@index([taskId])
  @@index([resourceId])
}

model Prediction {
  id            String   @id @default(uuid())
  taskId        String
  task          Task     @relation(fields: [taskId], references: [id])
  predictedTime Float
  confidence    Float
  features      Json
  modelVersion  String
  createdAt     DateTime @default(now())

  @@index([taskId])
}

model SystemMetrics {
  id          String   @id @default(uuid())
  metricName  String
  metricValue Float
  timestamp   DateTime @default(now())

  @@index([metricName])
  @@index([timestamp])
}

// User Authentication
enum UserRole {
  ADMIN
  USER
  VIEWER
}

model User {
  id            String    @id @default(uuid())
  email         String    @unique
  password      String
  name          String
  role          UserRole  @default(USER)
  isActive      Boolean   @default(true)
  lastLogin     DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  refreshTokens RefreshToken[]
  notifications NotificationPreference?

  @@index([email])
}

model RefreshToken {
  id        String   @id @default(uuid())
  token     String   @unique
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expiresAt DateTime
  createdAt DateTime @default(now())

  @@index([userId])
  @@index([token])
}

model NotificationPreference {
  id                  String  @id @default(uuid())
  userId              String  @unique
  user                User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  emailOnTaskComplete Boolean @default(true)
  emailOnTaskFailed   Boolean @default(true)
  emailDailySummary   Boolean @default(false)
  emailAddress        String?
}
