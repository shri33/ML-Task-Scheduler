# =================================
# ML Task Scheduler Environment
# =================================
# Copy this file to .env and fill in your values
# NEVER commit .env files with real secrets!

# Server Configuration
NODE_ENV=development
PORT=3001

# Database (Required)
# PostgreSQL connection string
DATABASE_URL=postgresql://user:password@localhost:5432/task_scheduler

# Redis (Optional in dev, Required in production)
REDIS_URL=redis://localhost:6379

# ML Service
ML_SERVICE_URL=http://localhost:5001

# CORS (Required in production)
# Comma-separated origins or single origin
CORS_ORIGIN=http://localhost:3000

# JWT Authentication (Required)
# Use a strong, random secret (min 32 chars)
# Generate with: openssl rand -base64 32
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Email Configuration (Optional)
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-email-password
EMAIL_FROM=noreply@ml-task-scheduler.com

# Swagger API Documentation Protection (Production)
# Used to protect /api/docs in production with Basic Auth
SWAGGER_USER=admin
SWAGGER_PASS=change-this-password

# Logging
LOG_LEVEL=INFO
